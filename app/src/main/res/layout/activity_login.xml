<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.example.kacper.walkwithme.LoginActivity.LoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/registerButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        tools:textColor="#009000" />

    <TextView
        android:id="@+id/accountRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="Don't have an account?"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4" />

    <EditText
        android:id="@+id/loginField"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="LOGIN"
        android:inputType="text"
        android:paddingBottom="9dp"
        android:paddingLeft="40dp"
        android:paddingTop="9dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="5"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.428"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordField" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:background="@drawable/button_register_rounded"
        android:elevation="1dp"
        android:enabled="true"
        android:fontFamily="sans-serif"
        android:text="SIGN IN"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/passwordField"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/passwordField" />

    <EditText
        android:id="@+id/passwordField"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingBottom="9dp"
        android:paddingLeft="40dp"
        android:paddingTop="9dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="5"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        tools:shadowDx="5"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.428"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10277778"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="42dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9026764"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="371dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/walk"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.489"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginTop="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1026764"
        tools:layout_editor_absoluteY="61dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
