<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_photo"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/notificationSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/person_photo"
            android:text=""
            android:textSize="30sp" />

        <TextView
            android:id="@+id/notificationTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/person_photo"
            android:layout_below="@+id/notificationSenderName"
            android:text=" invited you to " />

        <TextView
            android:id="@+id/notificationTypeField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationSenderName"
            android:layout_toRightOf="@id/notificationTypeLabel"
            android:text="friends"/>

        <ImageButton
            android:id="@+id/buttonAccept"
            android:layout_width="80px"
            android:layout_height="80px"
            android:background="@drawable/button_accept"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/buttonDecline"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/buttonAccept"
            android:layout_marginTop="17dp"
            android:background="@drawable/button_decline" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

