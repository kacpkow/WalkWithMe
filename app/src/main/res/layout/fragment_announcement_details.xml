<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kacper.walkwithme.MainActivity.Announcements.AnnouncementDetails.AnnouncementDetailsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advertisement details"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/strollStartTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stroll start time: " />

    <TextView
        android:id="@+id/strollStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/strollEndTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stroll end time: " />


    <TextView
        android:id="@+id/strollEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strollLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: " />

        <ImageButton
            android:id="@+id/strollLocationButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/eye_icon"/>

    </LinearLayout>

    <TextView
        android:id="@+id/strollLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />


        <TextView
            android:id="@+id/strollDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: " />


    <TextView
        android:id="@+id/strollDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
        android:id="@+id/cancelDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_register_rounded"/>

        <Button
            android:id="@+id/takePartInStrollButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take part in stroll"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_register_rounded"/>

    </LinearLayout>


</LinearLayout>
