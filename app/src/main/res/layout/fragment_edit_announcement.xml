<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kacper.walkwithme.MainActivity.Announcements.EditAnnouncement.EditAnnouncementFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your advertisement details"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strollStartTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stroll start time: " />

        <ImageButton
            android:id="@+id/strollStartTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <TextView
        android:id="@+id/strollStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strollEndTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stroll end time: " />

        <ImageButton
            android:id="@+id/strollEndTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <TextView
        android:id="@+id/strollEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strollLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: " />

        <ImageButton
            android:id="@+id/strollLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <TextView
        android:id="@+id/strollLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strollDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: " />

        <ImageButton
            android:id="@+id/strollDescriptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <TextView
        android:id="@+id/strollDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/strollPrivacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy" />

    <Spinner
        android:id="@+id/announcementPrivacySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/spinner_privacy_entries"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/cancelStrollDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_register_rounded"/>

        <Button
            android:id="@+id/changeStrollDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_register_rounded"/>

    </LinearLayout>



</LinearLayout>
