<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileSettings"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/userImage"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="400px"
        android:layout_height="400px" />

    <Button
        android:id="@+id/uploadPhotoButton"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload new photo"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/userFirstNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name:"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/userFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/firstNameEditButton"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/userLastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name:"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">



        <ImageButton
            android:id="@+id/lastNameEditButton"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/settings"/>

    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/userLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/userAgeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/userAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/ageEditButton"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/settings"/>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/userDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/userDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/descriptionEditButton"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/settings"/>

    </LinearLayout>

</LinearLayout>
