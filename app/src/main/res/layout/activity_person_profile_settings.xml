<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileSettings"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/userImage"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="400px"
                android:layout_height="400px" />

            <Button
                android:id="@+id/uploadPhotoButton"
                android:background="@drawable/button_register_rounded"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload new photo"/>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/userFirstNameLabel"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name:"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/userFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/firstNameEditButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/settings"/>

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/userLastNameLabel"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name:"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/lastNameEditButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/settings"/>

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/userLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/userBirthDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth date:"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/birthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/birthDateEditButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/settings"/>

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/userDescriptionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/userDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/descriptionEditButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/settings"/>

            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:id="@+id/userEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail:"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/emailEditButton"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/settings"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonSaveProfileData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:background="@drawable/button_register_rounded"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/buttonChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change password"
                android:background="@drawable/button_register_rounded"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
        </LinearLayout>


    </ScrollView>



</LinearLayout>
